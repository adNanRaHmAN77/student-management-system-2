<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-secondary">
                    <h3 class="text-light">Edit Student (<%= student.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= student._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="form-floating mb-3">
                            <input type="text" name="name" class="form-control form-control-lg" value="<%= student.name %>" required>
                            <label for="name">Name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" name="email" class="form-control form-control-lg" value="<%= student.email %>" required>
                            <label for="email">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="tel" name="phone" class="form-control form-control-lg" value="<%= student.phone %>" required>
                            <label for="name">Phone</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" name="degree" class="form-control form-control-lg" value="<%= student.degree %>" required>
                            <label for="name">Degree</label>
                        </div>
                        <div class="mb-3">
                            <label for="photo" class="form-label">Upload Photo</label>
                            <input type="file" class="form-control form-control-lg" name="photo" />
                            <img src="/<%= student.photo %>" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_photo" value="<%= student.photo %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Student" class="btn btn-success btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>